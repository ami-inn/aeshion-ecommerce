            <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Coupon Code</th>
                    <th scope="col">Cashback</th>
                    <th scope="col">Min-Amount</th>
                    <th scope="col">Expiry</th>
                    <th scope="col">status</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>

                    <% coupon.forEach((item,index)=>{ %>

                        <tr>
                            <th><%= index+1  %> </th>
                            <td ><%= item.name ? item.name : "name" %></td>
                            <td ><%= item.code ? item.code : "code" %></td>
                            <td ><%= item.cashback ? item.cashback : "cashback" %></td>
                            <td ><%= item.minAmount ? item.minAmount : "amount" %></td>
                            <td ><%= item.expiry ? item.expiry.toLocaleDateString() : "date" %></td>
                            <td ><%= item.status ? item.status : "Unavailable" %></td>
                            <td>
                                <div style="display: flex; gap: 8px;">

                                    <a href="/admin/edit-coupon/<%=item._id%>">

                                    <button type="submit" style="background-color: rgb(46, 91, 163); color: white; padding: 10px 30px; font-size: 18px; font-weight: 300;"   onclick="return confirm('are you sure you want to edit')">edit</button>
									
                                </a>
									

								<form method="post" action="/admin/delete-coupon/<%=item._id%>" >
									<button type="submit"  style="background-color: rgb(210, 61, 61); color: white; padding: 10px 30px; font-size: 18px; font-weight: 300;"   onclick="return confirm('are you sure you want to delete')">delete</button>
								
								</form>
                                     
                                </div>
								
                                  
                            </td>
                        </tr>


                        <%} ) %>

                
                 
                 
