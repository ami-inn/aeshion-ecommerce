	<!-- SIDEBAR -->



	<!-- CONTENT -->
	<section class="content" id="blur">
		<!-- NAVBAR -->	
		<main class="content-main">		
            
            <div class="product-nav" style="display: flex;justify-content: space-between;"> 
			<div>

                <form  class="search-form" role="search" method="post" action="/admin/search-product/">
                    <div class="form-input">
                        <input type="search" placeholder="Search Product" name="name">
						<button type="submit" class="search-btn"><i class='bx bx-search' ></i></button>
					</div>
				</form>
            </div>

            <div>

                
                <a href="/admin/add-product">
                    <button class="btn btn-dark w-30"  >Add Product </button>
                </a>
                
            </div>
            </div>

				<br>
	
                <table class="table table-striped">
                    <thead>
                        <tr>
                          <th scope="col">Name</th>
                          <th scope="col">Image</th>
                          <th scope="col">Category</th>
                          <th scope="col">Product status</th>
                          <th scope="col">Quantity</th>
                          <th scope="col">Action</th>
                          <th scope="col">View<th>
                        </tr>
                      </thead>
                      <tbody>
                        <% products.forEach(item=>{ %>
                
                          <tr>
                            <th scope="row"><%= item.name  %> </th>
                            <td><img src="http://localhost:3000/product-images/<%= item.mainImage.filename%>" style="height: 50px;" alt=""></td>
                            <td><%=item.category %> </td>
                            <td><%=item.status %> </td>
                           
                            
                            
                         
                            <td><%= item.quantity  %></td>
                            <td>
                                <div style="display: flex; align-items: center; gap: 10px;">

                                    <a href="/admin/edit-product/<%=item._id%>" style="background-color: rgb(88, 88, 195); color: white; padding: 10px 40px; font-size: 18px; font-weight: 300;">Edit</a>
                                   


									
									<%if(item.status =='available'){%>

										<form method="post" action="/admin/unlist-product/<%=item._id%>" >
											<button type="submit" style="background-color: rgb(239, 94, 92); color: white; padding: 10px 40px; font-size: 18px; font-weight: 300;"  onclick="return confirm('are you sure you want to unblock')">unlist</button>
										
										</form>
	
									   
								   
								   
								   <%} else{ %>
	
								  
	
									<form method="post" action="/admin/list-product/<%=item._id%>" >
										<button type="submit" style="background-color: rgb(126, 204, 135); color: white; padding: 10px 52px; font-size: 18px; font-weight: 300;"  onclick="return confirm('are you sure you want to list')">list</button>
									
									</form>
							   
							   
							   <%}%>



                                </div>
                        </td>
                        <td>
                            <a href="/single-product/<%=item._id%>" style="font-size: 25px; color: rgb(2, 38, 19);font-weight: bold;"><ion-icon name="eye-outline"></ion-icon></a>
                        </td>
                          </tr>
                
                        <% }) %> 
                       
                       
                      </tbody>
                  </table>

		
		
         

		</main>

		<!-- <div id="popup">

			<h5>are you sure ?</h5>

