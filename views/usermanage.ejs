		<!-- NAVBAR -->	
		<main class="content-main">			
			
				<form  class="search-form" role="search" method="post" action="/admin/search-user/">
					<div class="form-input">
						<input type="search" placeholder="Search Users" name="key">
						<button type="submit" class="search-btn"><i class='bx bx-search' ></i></button>
					</div>
				</form>

				<br>
	

		
		
            <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">email</th>
                    <th scope="col">Mobile</th>
                    <th scope="col">status</th>
                    <th scope="col">Handle</th>
                  </tr>
                </thead>
                <tbody>

                    <% users.forEach((item,index)=>{ %>

                        <tr>
                            <th><%= index+1  %> </th>
                            <td ><%= item.name ? item.name : "name" %></td>
                            <td ><%= item.email ? item.email : "email" %></td>
                            <td ><%= item.mobile ? item.mobile : "mobile" %></td>
                            <td ><%= item.status ? item.status : "status" %></td>
                            <td>
<!-- 
                                <form action="/admin/block-user/ <%= item._id %>" method="post">
                                    <button type="submit"  class="btn btn-danger"> Block</button>
                                </form> -->

								

                                <%if(item.status =='block'){%>

									<form method="post" action="/admin/unblock-user/<%=item._id%>" >
										<button type="submit" style="background-color: rgb(46, 91, 163); color: white; padding: 10px 52px; font-size: 18px; font-weight: 300;"   onclick="return confirm('are you sure you want to unblock')">unBlock</button>
									
									</form>

                                   
                               
                               
                               <%} else{ %>

                              

								<form method="post" action="/admin/block-user/<%=item._id%>" >
									<button type="submit"  style="background-color: rgb(210, 61, 61); color: white; padding: 10px 52px; font-size: 18px; font-weight: 300;"   onclick="return confirm('are you sure you want to block')">block</button>
								
								</form>
                           
                           
                           <%}%>

                                  
                            </td>
                        </tr>


                        <%} ) %>

                
                 
                 
                </tbody>
              </table>

		</main>

