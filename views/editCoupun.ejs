                <div class="wrapper wrapper--w680">
                    <div class="card card-4">
                    <div class="card-body">
                        <h2 class="title">Edit Coupun</h2>
                        
                        
                        <form  action="/admin/edit-coupon" method="post" >
                            <div class="row row-space">
                                <div class="col-2">
                                    <div class="input-group">
                                        <label class="label">Coupun name</label>
                                        <input class="input--style-4" type="text" name="name" value="<%=coupon.name  %>" placeholder="name">
                                    </div>
                                </div>

								<div class="col-2">
                                    <div class="input-group">
                                        <label class="label">Coupun Code</label>
                                        <input class="input--style-4" type="text" name="code" value="<%=coupon.code  %>" placeholder="code">
                                    </div>
                                </div>
                            
                            </div>

							<div class="row row-space">
                                <div class="col-2">
                                    <div class="input-group">
                                        <label class="label">Min Amount</label>
                                        <input class="input--style-4" type="text" name="minAmount" value="<%=coupon.minAmount %>" placeholder="amount">
                                    </div>
                                </div>

								<div class="col-2">
                                    <div class="input-group">
                                        <label class="label">Cashback</label>
                                        <input class="input--style-4" type="text" name="cashback" value="<%=coupon.cashback %>" placeholder="cashback">
                                    </div>
                                </div>
                            
                            </div>

							<div class="row row-space">
                                
        <input type="text" name="_id"  style="height: 0px; visibility: hidden;" value="<%=coupon._id  %>"/>
                                <div class="col-2">
                                    <div class="input-group">
                                        <label class="label">Expiry</label>
                                        <input class="input--style-4" type="date" name="expiry" value="<%=coupon.expiry  %>" placeholder="date">
                                    </div>
                                </div>

								<div class="col-2">
									<div class="p-t-15">
										<button class="btn btn--radius-2 btn--blue" type="submit">Add Coupon</button>
									</div>
                                </div>
                            
                            </div>
                        
    
                          
                        </form>
                    </div>
                </div>
            </div>
    
    
       
    
        </div>

            
            
