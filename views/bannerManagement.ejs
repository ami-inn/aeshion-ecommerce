                        </tr>
                      </thead>
                      <tbody>
                        <% banner.forEach((item,index)=>{ %>
                
                          <tr>

                            <th scope="row"> <%= index+1 %>  </th>

                            <th scope="row"><%= item.name  %> </th>
                           
                            <td><img src="http://localhost:3000/product-images/<%= item.mainImage.filename%>" style="height: 50px;" alt=""></td>
     

                            <td><%=item.description %> </td>
                            <td><%=item.status %> </td>
                           
                            <td>
                                <div style="display: flex; align-items: center; gap: 10px;">

                                    <a href="/admin/edit-banner/<%=item._id%>" style="background-color: rgb(88, 88, 195); color: white; padding: 10px 40px; font-size: 18px; font-weight: 300;">Edit</a>
                                   


                                    <% if(item.status == 'on-going') {%>

                                        <form method="post" action="/admin/unlist-banner/<%=item._id%>" >
											<button type="submit" style="background-color: rgb(239, 94, 92); color: white; padding: 10px 40px; font-size: 18px; font-weight: 300;"  onclick="return confirm('are you sure you want to inactive')">inactive</button>
										
										</form>

                                    <%}else{ %> 

                                        
									<form method="post" action="/admin/list-banner/<%=item._id%>" >
										<button type="submit" style="background-color: rgb(126, 204, 135); color: white; padding: 10px 52px; font-size: 18px; font-weight: 300;"  onclick="return confirm('are you sure you want to active')">active</button>
									
									</form>
									
									<% } %> 
									   
								   
								   
								
	
								  
	
							   
							   
						



                                </div>
                        </td>
                    
                          </tr>
                
                        <% }) %> 
                       
                       
