            <div class="p-t-130 p-b-100 font-poppins">

    
            
                 
                <div class="wrapper wrapper--w680">
                    <div class="card card-4">
                    <div class="card-body">
                        <h2 class="title">edit order</h2>
                        
                        
                        <form  action="/admin/edit-order" method="post" >
                            <input type="text" name="_id" value="<%=order._id%>" style="height: 0px; visibility: hidden;">
                            <div class="row row-space">
                                <div class="col-2">
                                    <div class="input-group">
                                        <label class="label">User</label>
                                        <input style="color: rgb(65, 65, 65); font-weight:bold;" class="input--style-4" type="text" name="name" placeholder="name" disabled value="<%=order.address.name%>" >
                                    </div>
                                </div>

								<div class="col-2">
                                    <div class="input-group">
                                        <label class="label">Product</label>
                                        <input style="color: rgb(59, 59, 59); font-weight:bold;" class="input--style-4" type="text" name="code" placeholder="category" disabled value="<%=order.product.name%>">
                                    </div>
                                </div>
                            
                            </div>

							<div class="row row-space">
                               
                                <div class="col-2">
                                    <div class="input-group">
                                        <label class="label">order Status =   </label>
                                        <select name="status" class="input--style-4" value="<%=order.orderStatus%>" >

											<% if(order.orderStatus == 'returned'){%>

											<%} else if (order.orderStatus == 'return-progressing'){ %>
												<option value="return-progressing">Return Progressing</option>
												<option value="returned">Returned</option>

											<%}else{ %>

                                            <option value="pending">Pending</option>
                                            <option value="delivered">Delivered</option>
                                            <option value="cancelled">Cancel</option>
                                            

											<% } %>

                                        </select>
                                    </div>
                                </div>

                                <div class="col-2">
									<div class="p-t-15">
										<button class="btn btn--radius-2 btn--blue" type="submit">Edit</button>
									</div>
                                </div>
                            
                            </div>

						
                        
    
                          
                        </form>
                    </div>
                </div>
            </div>
    
    
       
    
        </div>

            
            
